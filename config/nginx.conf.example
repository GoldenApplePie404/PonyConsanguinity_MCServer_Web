# Nginx 配置示例
# 将此配置添加到你的 Nginx 配置文件中

# 禁止访问 config 目录
location ~ ^/config/ {
    deny all;
    return 404;
}

# 禁止访问 .env 文件
location ~ /\.env$ {
    deny all;
    return 404;
}

# 禁止访问日志目录
location ~ ^/logs/ {
    deny all;
    return 404;
}

# 禁止访问数据目录中的 JSON 文件
location ~ ^/data/.*\.json$ {
    deny all;
    return 404;
}

# 只允许访问 api/ 目录下的 PHP 文件
location ~ \.php$ {
    # 确保只允许 api/ 目录下的 PHP 文件
    # config/ 目录已被上面的规则拒绝
}
